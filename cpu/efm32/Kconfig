config CPU_COMMON_EFM32
    bool
    select HAS_ARCH_EFM32
    select HAS_CORTEXM_MPU
    select HAS_CPU_EFM32
    select HAS_PERIPH_CPUID
    select HAS_PERIPH_FLASHPAGE
    select HAS_PERIPH_FLASHPAGE_RAW
    select HAS_PERIPH_GPIO
    select HAS_PERIPH_GPIO_IRQ
    select PACK_GECKO_SDK

## Definition of specific features
config HAS_ARCH_EFM32
    bool
    help
        Indicates that the 'efm32' architecture is being used.

config HAS_CPU_EFM32
    bool
    help
        Indicates that the CPU being used is an EFM32.

## Common CPU symbols
config CPU
    default "efm32" if CPU_COMMON_EFM32

config MOD_PERIPH_HASH_SHA1
    depends on CPU_COMMON_EFM32
    select HAVE_OWN_SHA1_CTX

config MOD_PERIPH_HASH_SHA256
    depends on CPU_COMMON_EFM32
    select HAVE_OWN_SHA256_CTX

config EFM32_AES_ECB_NONBLOCKING
    bool "Non blocking version of AES ECB encrypt (Test only!)"
    depends on MOD_PERIPH_CRYPTO_AES_ECB

orsource "families/*/Kconfig"
source "$(RIOTCPU)/cortexm_common/Kconfig"
